    private void recalcularActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_recalcularActionPerformed
         double saldoi = 0.0;
        if (this.saldoinicial.getText().compareTo("")!= 0){
                     saldoi = Double.parseDouble(this.saldoinicial.getText());
            }
        double total = Double.parseDouble(this.ventaneta.getText());
        this.saldofinal.setText(""+ (saldoi + total));
    }//GEN-LAST:event_recalcularActionPerformed

