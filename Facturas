    private void btn_buscar2ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btn_buscar2ActionPerformed
        Date cd = jDateChooser1.getDate();
        SimpleDateFormat fechas = new SimpleDateFormat("yyyy-MM-dd");
        String fechah = fechas.format(cd);
        String vendedor = "";
        double total = 0.0;
        int totalProd = 0;
        
        double saldoi = 0.0;
        double saldof = 0.0;
        
        try{
                            Statement st = conexion.createStatement();
                            ResultSet rs = st.executeQuery("SELECT MAX(`Id`) FROM `corte`");
                            while(rs.next()){
                                int i = Integer.parseInt(rs.getString("MAX(`Id`)"));
                                int idfact = i + 1;
                                
                            this.idcorte.setText(""+idfact);
                            
                            }
                        }catch(SQLException ex){
                            JOptionPane.showMessageDialog(null, ex.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
                        }
          
         try{
        Statement st = conexion.createStatement();
        ResultSet rs;
        rs = st.executeQuery("SELECT `vendedor`, `cantidadpro`, `totalventa` FROM `registroventasfac` WHERE `fecha` = '"+fechah+"'");
        
        while (rs.next()) {            
          totalProd = totalProd + rs.getInt("cantidadpro");
          total = total + rs.getDouble("totalventa");
          vendedor = rs.getString("vendedor");
         }
        
        }catch(SQLException ex){
                JOptionPane.showMessageDialog(null,ex.getMessage(), "¡ERROR!", JOptionPane.ERROR_MESSAGE);
           }
         
         saldof = saldoi + total;
         this.totalpro.setText(""+totalProd);
         this.ventaneta.setText(""+total);
         this.fechacorte.setText(fechah);
         
         this.saldoinicial.setText(""+saldoi);
         this.saldofinal.setText(""+saldof);
         this.vendedorcorte.setText(vendedor);
         
         cargarProductos();

    }//GEN-LAST:event_btn_buscar2ActionPerformed

    private void formWindowClosed(java.awt.event.WindowEvent evt) {//GEN-FIRST:event_formWindowClosed
        principal.setVisible(true);
    }//GEN-LAST:event_formWindowClosed

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
       
        recalcularActionPerformed(evt);
       double saldof = Double.parseDouble(this.saldofinal.getText());
       double saldoi = Double.parseDouble(this.saldoinicial.getText());
       double total = Double.parseDouble(this.ventaneta.getText());
       String id = this.idcorte.getText();
       String fecha = this.fechacorte.getText();
       String vendedor = this.vendedorcorte.getText();
       Statement st;
    
       int i = 0;
      try{
           
          st = conexion.createStatement();
          ResultSet rs;
          rs = st.executeQuery("SELECT `fecha`, `Id` FROM `corte` WHERE 1");
            while(rs.next()){ 
                            if (fecha.equals(rs.getString("fecha"))){
                               i =JOptionPane.showConfirmDialog(null , "El corte existente se actualizara, ¿Continuar?");
                               if (i == 0){
                                   id = rs.getString("Id");
                               }else if (i == 1){
                                   JOptionPane.showMessageDialog(null, "Se creara un duplicado", "Error", JOptionPane.ERROR_MESSAGE);
                               }
                               break;
                             }
                        }
          
         }catch(SQLException ex){
            JOptionPane.showMessageDialog(null, ex.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
       }
       
         switch (i){
             case 0:
                          String sql = "INSERT INTO `corte`(`Id`, `vendedor`, `fecha`, `saldoi`, `ventaneta`, `saldof`) "
                             + "VALUES ('"+id+"','"+vendedor+"','"+fecha+"','"+saldoi+"','"+total+"','"+saldof+"')";
       
                            try{
                                st = conexion.createStatement();
                                st.execute("DELETE FROM `corte` WHERE `Id` = "+id);
                                st.execute(sql);
                                st.execute("DELETE FROM `registroproccorte` WHERE `idcorte` = "+id);
                                guardarProductosCorte(Integer.parseInt(id));
                                JOptionPane.showMessageDialog(null, "El Corte se a guardado de forma correcta");
                           
                       }catch(SQLException ex){
                             JOptionPane.showMessageDialog(null, ex.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
            
                                     }
                 
                 break;
                 
             case 1:
                        
                    sql = "INSERT INTO `corte`(`Id`, `vendedor`, `fecha`, `saldoi`, `ventaneta`, `saldof`) "
                    + "VALUES ('"+id+"','"+vendedor+"','"+fecha+"','"+saldoi+"','"+total+"','"+saldof+"')";
       
                     try{
                           st = conexion.createStatement();
                           st.execute(sql);
                           guardarProductosCorte(Integer.parseInt(id));
                           JOptionPane.showMessageDialog(null, "El Corte se a guardado de forma correcta");
                           
                       }catch(SQLException ex){
                             JOptionPane.showMessageDialog(null, ex.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
            
                       }
                 break;
                 
             default:
                        
                   break;
                 
      
         }
      
    }//GEN-LAST:event_jButton1ActionPerformed

