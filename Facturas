    public void colorEtiquetasEntrar(JLabel lbl){
        Color c = new Color(134, 255, 63);
        lbl.setBackground(c);
    }
       public void colorEtiquetasSalir(JLabel lbl){
        Color c = new Color(240, 240, 240);
        lbl.setBackground(c);
    }
